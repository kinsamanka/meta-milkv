+int dw_i2c_interrupt_init(void *base)
+{
+	unsigned int intr = 0;
+
+	dw_misc_getreg(base,DW_IC_CLR_INTR);
+	intr |= (DW_IC_BIT_INT_FREE | DW_IC_BIT_INT_TX_ABRT);
+	dw_misc_reg_write( intr,base,DW_IC_INTR_MASK);
+	return 0;
+}
