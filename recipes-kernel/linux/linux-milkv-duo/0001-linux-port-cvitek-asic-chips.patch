+static int cvi_i2s_remove(struct platform_device *pdev)
+{
+	struct cvi_i2s_dev *dev = dev_get_drvdata(&pdev->dev);
+
+	if (dev->capability & CVI_I2S_MASTER)
+		clk_disable_unprepare(dev->clk);
+
+	pm_runtime_disable(&pdev->dev);
+	return 0;
+}
