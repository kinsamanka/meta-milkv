+		.channels_min	= 1,
+		.channels_max	= 2,
+		.rates = SNDRV_PCM_RATE_8000_192000,
+		.formats = SNDRV_PCM_FMTBIT_S32_LE
+		| SNDRV_PCM_FMTBIT_S24_LE
