+
+	if (clk_hw->lock)
+		spin_lock_irqsave(clk_hw->lock, flags);
+	else
+		__acquire(clk_hw->lock);
+
+	reg = readl(reg_addr);
+
+	if (enable)
+		reg |= BIT(clk_hw->gate.shift);
+	else
+		reg &= ~BIT(clk_hw->gate.shift);
+
+	writel(reg, reg_addr);
+
+	if (clk_hw->lock)
+		spin_unlock_irqrestore(clk_hw->lock, flags);
+	else
+		__release(clk_hw->lock);
+}
