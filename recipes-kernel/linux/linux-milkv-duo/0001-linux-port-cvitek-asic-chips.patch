+	chip->ecc.read_oob = cvsnfc_read_oob;
+	chip->ecc.read_page_raw = cvsnfc_read_page_raw;
+	chip->ecc.read_subpage = cvsnfc_read_subpage;
+	chip->ecc.write_page = cvsnfc_write_page;
