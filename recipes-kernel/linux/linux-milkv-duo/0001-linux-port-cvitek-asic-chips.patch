+static int cv182xadc_set_dai_fmt(struct snd_soc_dai *dai,
+				 unsigned int fmt)
+{
+
+	struct cv182xadc *adc = snd_soc_dai_get_drvdata(dai);
+
+	if (!adc->dev)
+		dev_err(adc->dev, "dev is NULL\n");
+
+	switch (fmt & SND_SOC_DAIFMT_MASTER_MASK) {
