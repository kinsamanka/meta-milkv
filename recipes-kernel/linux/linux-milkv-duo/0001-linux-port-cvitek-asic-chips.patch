+	DW_IC_I2C_SPDMODE_REV = 0,
+	DW_IC_I2C_SPDMODE_STD,
+	DW_IC_I2C_SPDMODE_FAST,
+	DW_IC_I2C_SPDMODE_HIGH,
+} DW_IC_I2C_SPDMODE_E;
