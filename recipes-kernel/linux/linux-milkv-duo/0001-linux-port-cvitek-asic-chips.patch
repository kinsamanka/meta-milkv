+{
+	struct cv1835_gate_hw_clock *gate_hw = to_cv1835_gate_clk(hw);
+	struct cv1835_gate_clock *gate = &gate_hw->gate;
+	void __iomem *reg_addr = gate_hw->base + gate->reg;
