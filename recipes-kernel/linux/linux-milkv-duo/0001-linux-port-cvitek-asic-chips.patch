+static void __maybe_unused clrsetbits(void __iomem *reg, u32 clrval, u32 setval)
+{
+	u32 regval;
+
+	regval = readl(reg);
+	regval &= ~(clrval);
+	regval |= setval;
+	writel(regval, reg);
+}
