+int dw_i2c_WaitTransmitOver(void *base,unsigned int fifoFlag)
+{
+	int i;
+	unsigned int tmp;
+
+	for (i = 0; i < 0xffff; i++) {
+		tmp = dw_misc_getreg(base,DW_IC_STATUS);
+		if ( DW_IC_BIT_ACTIVITY != (tmp & DW_IC_BITMASK_ACTIVITY)
+				&& (tmp & fifoFlag )) {
+			return 0;
+		}
+	}
+
+	return -1;
+}
