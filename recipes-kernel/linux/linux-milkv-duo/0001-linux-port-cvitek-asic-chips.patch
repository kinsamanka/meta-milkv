+	free_irq(dev->irq, dev);
+	dw_i2c_uninit(dev->base, pdev->id);
+
+err_iounmap:
+	iounmap(dev->base);
+err_free_mem:
+	platform_set_drvdata(pdev, NULL);
+	kfree(dev);
