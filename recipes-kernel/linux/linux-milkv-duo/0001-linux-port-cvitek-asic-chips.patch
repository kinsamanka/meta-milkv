+int cv1835dac_reg_write(struct snd_soc_component *codec, unsigned int reg, unsigned int value)
+{
+	struct cvi1835dac *dac = dev_get_drvdata(codec->dev);
+
+	dac_write_reg(dac->dac_base, reg, value);
