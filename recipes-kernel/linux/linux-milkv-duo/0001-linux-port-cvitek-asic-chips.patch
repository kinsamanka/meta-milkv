+	// clk_prepare_enable(clk_data->hw_data.hws[CV180X_CLK_SC_TOP_VIP]->clk);
+
+#ifdef CONFIG_PM_SLEEP
+	register_syscore_ops(&cv180x_clk_syscore_ops);
+#endif
+
+	if (!ret)
+		return;
+
+out:
+	pr_err("%s failed error number %d\n", __func__, ret);
+}
