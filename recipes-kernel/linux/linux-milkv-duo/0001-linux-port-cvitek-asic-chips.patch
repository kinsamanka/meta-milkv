+		.pm = &cv181x_thermal_pm_ops,
+		.of_match_table = cv181x_thermal_of_match,
+	},
+};
+
+module_platform_driver(cv181x_thermal_driver);
+MODULE_DESCRIPTION("cv181x thermal driver");
