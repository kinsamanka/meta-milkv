+		spin_lock_irqsave(gate_hw->lock, flags);
+	else
+		__acquire(gate_hw->lock);
+
+	reg = readl(reg_addr);
+
+	if (enable)
+		reg |= BIT(gate->shift);
+	else
+		reg &= ~BIT(gate->shift);
+
+	writel(reg, reg_addr);
+
+	if (gate_hw->lock)
+		spin_unlock_irqrestore(gate_hw->lock, flags);
+	else
+		__release(gate_hw->lock);
