+// SPDX-License-Identifier: GPL-2.0-or-later
+/*
+ * I2S driver on CVITEK CV1835
+ *
+ * Copyright 2018 CVITEK
+ *
+ * Author: EthanChen
+ *
+ */
+
+
+#include <linux/clk.h>
+#include <linux/device.h>
+#include <linux/init.h>
+#include <linux/io.h>
+#include <linux/interrupt.h>
+#include <linux/module.h>
+#include <linux/slab.h>
