+		| DWC_CH_INTSTA_SRC_TFR_COMP_EN
+		| DWC_CH_INTSTA_DST_TFR_COMP_EN
+		| DWC_CH_INTSTA_SRC_DEC_ERR_EN
+		| DWC_CH_INTSTA_DST_DEC_ERR_EN
+		| DWC_CH_INTSTA_LLI_RD_DEV_ERR_EN
