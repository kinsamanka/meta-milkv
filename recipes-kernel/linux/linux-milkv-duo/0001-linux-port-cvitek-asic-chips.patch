+		    clk_data->pll_g6_csr_saved_regs,
+		    CV182X_PLL_G6_CSR_NUM * 4);
+
+	/* wait for pll setting updated */
+	while (readl(clk_data->base + CV182X_CLK_PLL_G6_STATUS) & 0x7) {
+	}
