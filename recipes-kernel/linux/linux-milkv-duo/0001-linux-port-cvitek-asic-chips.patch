+static void thead_dwmac_fix_speed(void *bsp_priv, unsigned int speed)
+{
+	struct thead_dwmac_priv_data *thead_plat_dat = bsp_priv;
+
+	thead_dwmac_set_speed(thead_plat_dat->gmac_clk_reg,
+				thead_plat_dat->interface, speed);
+}
