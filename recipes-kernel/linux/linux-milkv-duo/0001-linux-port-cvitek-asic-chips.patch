+	writeb(val, cvi_host->pinmuxbase + 0x50);
+	writeb(val, cvi_host->pinmuxbase + 0x5C);
+	writeb(val, cvi_host->pinmuxbase + 0x54);
+	writeb(val, cvi_host->pinmuxbase + 0x60);
