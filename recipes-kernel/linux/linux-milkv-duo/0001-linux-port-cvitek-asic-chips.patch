+			   channel_readq(dwc, STATUS), channel_readq(dwc, INTSTATUS),
+			   dwc->hw_pos, dwc->interrupt_count);
+	}
+
+	if (!dma_readq(dw, CH_EN))
+		dwc_unprepare_clk(dw);
+
+	return 0;
