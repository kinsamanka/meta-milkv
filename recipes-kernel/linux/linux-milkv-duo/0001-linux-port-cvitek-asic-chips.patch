+		| DWC_CH_INTSTA_LLI_RD_SLV_ERR_EN
+		| DWC_CH_INTSTA_LLI_WD_SLV_ERR_EN
+		| DWC_CH_INTSTA_CH_ABORTED_EN;
+#endif
+	}
