+{
+	//struct mtd_info *mtd = nand_to_mtd(chip);
+	struct cvsnfc_host *host = nand_get_controller_data(chip);
+
+
+	if (chip->ecc.engine_type == NAND_ECC_ENGINE_TYPE_ON_HOST)
+		cvsnfc_ecc_probe(host);
+
+	return 0;
+}
