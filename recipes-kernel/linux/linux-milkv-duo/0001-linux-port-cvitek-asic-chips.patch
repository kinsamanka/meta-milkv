+{
+	STATUS_IDLE      = 0,
+	STATUS_HANDLING  = 1,
+	STATUS_DONE      = 2,
+	STATUS_ERROR     = 3,
+	STATUS_BUTT   = 4,
+}DW_IC_I2C_GROUP_STATUS_E;
