+static int ultrafb_ioctl(struct fb_info *info, unsigned int cmd,
+		unsigned long argp)
+{
+	int ret, j;
+	u32 vblank_count;
+	dc_frame_info size;
+	dc_filter_tap filtertap;
+	dc_sync_table table;
+	struct fb_cursor cursor;
+	static dc_gamma_table gammatable;
