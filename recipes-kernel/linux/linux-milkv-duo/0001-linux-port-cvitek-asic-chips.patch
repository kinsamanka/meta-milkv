+		break;
+
+	case ACODEC_SET_PD_ADCL:
+		pr_debug("adc: ACODEC_SET_PD_ADCL, val=%d\n", val);
+		if (val == 0) {
+			temp = adc_read_reg(adc->adc_base, AUDIO_PHY_RXADC_CTRL0);
