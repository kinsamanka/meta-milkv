+	seq_puts(m, "L-Vol           R-Vol\n");
+	seq_printf(m, "  %d             %d\n", val2, val3);
+	seq_puts(m, "\n");
+
+	iounmap(i2s3);
+	iounmap(dac);
+	iounmap(audio_pll);
+	iounmap(sdma_pll);
+	return 0;
