+static void cv180x_clk_gate_endisable(struct clk_hw *hw, int enable)
+{
+	struct cv180x_hw_clock *clk_hw = to_cv180x_clk(hw);
+	void __iomem *reg_addr = clk_hw->base + clk_hw->gate.reg;
