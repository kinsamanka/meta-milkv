+	} else {
+		bus_hz = clk_get_rate(bus_clk);
+	}
+	printk("i2c bus %dHz\n", bus_hz);
+
+	if (device_property_read_u32(&(pdev->dev), "clock-frequency", &freq)) {
+		freq = I2C_SPEED;
+	} else {
+		printk("get freq=%d\n", freq);
+	}
