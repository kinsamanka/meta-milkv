+
+/* register offset */
+#define PDM_EN_REG	        0x30
+#define PDM_EN				0x1
+#define PDM_OFF				0x0
+
+#define PDM_48K						3
+#define PDM_44_1K					3
+#define PDM_22_05K					7
+#define PDM_16K						11
+#define PDM_11_025K					15
+#define PDM_8K						23
+
+#define PDM_SETTING_REG		        0x34
