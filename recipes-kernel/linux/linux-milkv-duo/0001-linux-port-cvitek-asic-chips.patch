+static int64_t plat_efuse_read_safe(uint32_t addr)
+{
+	int err;
+	uint32_t v;
+
+	if (addr >= EFUSE_SIZE)
+		return -EFAULT;
+
+	if (addr % 4 != 0)
+		return -EFAULT;
+
+	err = clk_prepare_enable(clk_efuse);
+	if (err) {
+		pr_err("clk_efuse: clock failed to prepare+enable: %d\n", err);
+		return -EIO;
+	}
+
+	v = ioread32(EFUSE_SHADOW_REG + addr);
+	clk_disable_unprepare(clk_efuse);
+	return v;
+}
