+	writel(regval_ssc_set, pll_hw->base + reg_ssc_set);
+
+	/* bit 0 toggle */
+	regval_ssc_ctrl = readl(pll_hw->base + reg_ssc_ctrl);
+	regval_ssc_ctrl ^= 0x00000001;
+	writel(regval_ssc_ctrl, pll_hw->base + reg_ssc_ctrl);
